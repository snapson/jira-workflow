doctype html
html
    title Login to Jira
body
  include header

  link(rel='stylesheet', href='/css/login.css')

  .container#loginBlock
    form.form-signin(role='form')
      h2  Please sign in to Jira
      input.form-control(type='text', name='username')
      input.form-control(type='password', name='password')
      input.btn.btn-lg.btn-primary.btn-block(type='submit', value='Sign in')

  include footer